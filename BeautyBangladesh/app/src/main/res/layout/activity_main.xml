<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/img"
    >
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="beauty of \n bangladesh"
     android:textSize="30sp"
     android:textColor="#C70039"
     android:textAllCaps="true"
     android:layout_marginTop="20sp"
     android:gravity="center"
     android:background="#fff "
     android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10sp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="somgit"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:background="#ffff00"
        android:gravity="center"
        android:textStyle="bold"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="#C70000"
        android:gravity="left"
        android:padding="10sp"
        android:text="amar sonar bangla , ami tomay valobasi ,chirodin tomar akas chirodin tomar batas , amar prane lage sudar mtw,,"
        android:textColor="#ffffff"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135sp"
        android:background="#fff"
        android:weightSum="90"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="like"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comment"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="share"
                android:textSize="20sp"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>