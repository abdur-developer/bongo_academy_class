<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:text="@string/head"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"
                android:text="Button"
                android:background="@drawable/bottom_curved"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"
                android:background="@drawable/bottom_shade"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/circle_colored"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/circle_transparent"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/circle_two_colored"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/left_shade"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/orange_button"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/red_button"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/right_shade"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/singecolor_button"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/three_color"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button12"
                android:background="@drawable/three_color_curved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/top_shade"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:background="@drawable/two_color"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"
                android:text="Button"
                />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:background="@drawable/two_color_curved"
                android:drawableRight="@drawable/img"
                android:layout_gravity="center"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>