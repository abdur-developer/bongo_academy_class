<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fff"
    android:paddingLeft="20dp"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bmi_calculatior"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#EFE303"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="@drawable/heading"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/enter_your_weight"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:layout_margin="3dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/ed_weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/enter_kg"
        android:paddingLeft="20sp"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:inputType="numberDecimal"
        android:background="@drawable/edtext_style"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Enter your hight"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:layout_margin="3dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_hight_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="enter foot..."
            android:textSize="20sp"
            android:paddingLeft="20sp"
            android:gravity="center_vertical"
            android:background="@drawable/edtext_style"
            android:layout_marginRight="5dp"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/ed_hight_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20sp"
            android:hint="enter inch..."
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:background="@drawable/edtext_style"
            android:inputType="numberDecimal"
            />


    </LinearLayout>

    <Button
        android:id="@+id/calculation"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Calculate"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/button"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_display_1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>

</LinearLayout>